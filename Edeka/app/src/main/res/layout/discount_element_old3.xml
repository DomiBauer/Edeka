<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/discount_element_body">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight=".25"
            android:src="@drawable/test" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Tafeltrauben „Sultana“"
                android:textColor="#FFFFFF"
                android:id="@+id/test1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="hell, kernlos, aus der Türkei, Kl. I, 1kg"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/test1"
                android:id="@+id/test2"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/discount_element_button_group"
        android:layout_below="@+id/discount_element_body"
        android:layout_margin = "20dp">

        <View
            android:id="@+id/anchor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight=".10"
            android:layout_centerInParent="true" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".45"
            android:textSize="10sp"
            android:text="Produktinformationen"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="5dp"
            android:background="@drawable/my_button_bg"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".45"
            android:textSize="10sp"
            android:text="In den Einkaufswagen"
            android:textColor="@color/colorAccent"
            android:background="@drawable/my_button_bg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_below="@id/discount_element_button_group"
        android:layout_marginBottom="20dp" />

</RelativeLayout>